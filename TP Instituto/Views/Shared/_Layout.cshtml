            @RenderBody()
            <hr />
            <footer class="footer-distributed">
                <div class="footer-left">
                    <h3>NUEVAS TECNOLOGIAS</h3>
                    <p class="footer-links">
                        <a href="#">@Html.ActionLink("Profesor", "Index", "Profesor")</a>
