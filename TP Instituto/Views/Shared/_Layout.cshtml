                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    @Html.ActionLink("Asociación Yusan", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                </div>
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("Alumno", "Index", "Alumno")</li>
                        <li>@Html.ActionLink("Profesor", "Index", "Profesor")</li>
                        <li>@Html.ActionLink("Curso", "Index", "Curso")</li>
                    </ul>
                </div>
            </div>
    </div>
